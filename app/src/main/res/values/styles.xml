<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffca65</item>
        <item name="colorPrimaryDark">#ffca65</item>
        <item name="colorAccent">#9dcfc7</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!---//////////////Eugenia's input//////////////-->
    <style name="loginEditText">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:fontFamily">casual</item>
    </style>
    <style name="loginButton">
        <item name="android:background">#9dcfc7</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="mainGridLayout">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#9dcfc7</item>
        <item name="android:textColor">#fff</item>

    </style>

    <style name="createAccountEditText">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="createAccountButton">
        <item name="android:textColor">#fff</item>
        <item name="android:background">#ffca65</item>
        <item name="android:text">Submit</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:gravity">center</item>

    </style>

    <!--//////////Eugenia's input 2nd///////////////-->
    <style name="updateUserAcct">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="udpateUserAcctET">
        <item name="android:fontFamily">casual</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingLeft">30dp</item>
    </style>


    <!--///////////Eugenia's input 3rd////////////////-->
    <style name="reviewPageBtn">
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="radioBtnStyle">
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">#333</item>
        <item name="android:buttonTint">@color/orange</item>
    </style>
    <style name="reviewPageET">
        <item name="android:fontFamily">casual</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">13dp</item>
    </style>
    <style name="reviewPageListV">
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="tableLable">
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="tableDisplay">
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
